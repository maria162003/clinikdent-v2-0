      'DELETE FROM password_reset_tokens WHERE usuario_id = ? OR expires_at < NOW()',
      [usuario.id]
    );
    
    // Guardar nuevo token
    await db.query(
      'INSERT INTO password_reset_tokens (usuario_id, token, expires_at) VALUES (?, ?, ?)',
      [usuario.id, resetToken, expiresAt]
    );
    
    // Enviar email de recuperaciÃ³n
