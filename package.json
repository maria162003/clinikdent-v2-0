{
  "name": "clinikdent-v2",
  "version": "2.0.0",
  "description": "ü¶∑ Sistema completo de gesti√≥n cl√≠nica odontol√≥gica - Node.js + MySQL",
  "main": "app.js",
  "scripts": {
    "start": "node app.js",
    "dev": "nodemon app.js",
    "test": "jest --detectOpenHandles --forceExit",
    "test:unit": "jest tests/unit --detectOpenHandles",
    "test:integration": "jest tests/integration --detectOpenHandles",
    "test:api": "jest tests/api --detectOpenHandles",
    "test:security": "jest tests/security --detectOpenHandles",
    "test:performance": "jest tests/performance --detectOpenHandles",
    "test:coverage": "jest --coverage --detectOpenHandles",
    "test:watch": "jest --watch",
    "lint": "eslint . --ext .js",
    "lint:fix": "eslint . --ext .js --fix",
    "security:audit": "npm audit",
    "security:check": "node tests/security/security-scanner.js"
  },
  "keywords": ["clinica", "odontologia", "gestion", "mysql", "nodejs", "dental", "healthcare"],
  "author": "Clinikdent Team <dev@clinikdent.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/maria162003/clinikdent-v2-0.git"
  },
  "dependencies": {
    "axios": "^1.11.0",
    "bcrypt": "^6.0.0",
    "bcryptjs": "^3.0.2",
    "cors": "^2.8.5",
    "crypto": "^1.0.1",
    "docker": "^1.0.0",
    "dotenv": "^17.2.1",
    "express": "^5.1.0",
    "mysql": "^2.18.1",
    "mysql2": "^3.14.3",
    "node-fetch": "^3.3.2",
    "nodemailer": "^7.0.5"
  },
  "devDependencies": {
    "nodemon": "^3.1.10",
    "jest": "^29.7.0",
    "supertest": "^6.3.4",
    "eslint": "^8.57.0",
    "@types/jest": "^29.5.8",
    "helmet": "^7.1.0",
    "rate-limiter-flexible": "^5.0.3"
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "Backend/**/*.js",
      "public/js/**/*.js",
      "!node_modules/**",
      "!tests/**",
      "!coverage/**"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": ["text", "lcov", "html"],
    "testMatch": [
      "**/tests/**/*.test.js",
      "**/tests/**/*.spec.js"
    ],
    "setupFilesAfterEnv": ["<rootDir>/tests/setup.js"]
  }
}
